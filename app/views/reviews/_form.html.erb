

<%= simple_form_for([@review.subject, @review]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :overall, :collection => 1..10, :selected => 5 %>
  <%= f.input :workload, :collection => 1..10, :selected => 5 %>
  <%= f.input :difficulty, :collection => 1..10, :selected => 5 %>
  <%= f.input :recommend,     :as => :radio_buttons %> 
    <div class="control-group">
            
            <div class="controls docs-input-sizes">
             
              <div class="alert alert-info" style="width: 460px">
                You can optionally add a review. Try and be descriptive.
              </div>
            </div>
          </div>
  <%= f.input :review, :input_html => { :rows => 10, :style => "width: 500px;"}, :label => "A brief description of your experiences" %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>

<% end %>